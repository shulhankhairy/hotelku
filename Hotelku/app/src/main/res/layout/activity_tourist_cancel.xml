<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hotelku.tourist.mainmenu.TouristCancelActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cancellation Reason"
            android:id="@+id/textView99"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:hint="your cancellation reason" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*cancellation reason must be accordance in our cancellation policy. cancellation fee may be applied by the property. Make sure you read the cancellation policy before cancel your booking."
                android:id="@+id/textView100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes, I agree and read it"
            android:id="@+id/checkBox"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp" >

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Cancel book"
                android:id="@+id/tourist_cancel_booking"
                android:layout_weight="1"
                android:background="@color/main_color"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="left"
                android:layout_marginRight="3dp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/tourist_cancel_back"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:background="@color/main_color"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
