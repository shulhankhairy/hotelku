<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register your account"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/user_picture"
            android:src="@drawable/ic_user"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="113dp"
            android:layout_height="34dp"
            android:text="Upload"
            android:id="@+id/upload_profile_pict_button"
            android:layout_gravity="center_horizontal"
            android:background="@color/main_color"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_tourist_name"
            android:layout_gravity="center_horizontal"
            android:hint="Your Name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/register_tourist_birthdate"
            android:hint="Your Birthdate"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/register_tourist_gender"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_tourist_phone"
            android:hint="Phone Number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:inputType="phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_tourist_email"
            android:hint="Your E-Mail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_tourist_password"
            android:hint="Password (Min. 8 Character)"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_tourist_button"
        android:background="@color/main_color"
        android:layout_gravity="center_horizontal|left"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/register_tourist_button_cancel"
        android:background="@color/main_color"
        android:layout_gravity="center_horizontal|left"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/register_tourist_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

</RelativeLayout>