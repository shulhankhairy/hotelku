<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_logo2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register Success!"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, welcome abroad lads!"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good to know you have read our Terms and Conditions, Privacy Policy, and Cancellation Policy"
        android:id="@+id/textView4"
        android:maxLength="100"
        android:maxLines="3"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hope you enjoy our stuff!"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:id="@+id/tourist_terms_cond"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/main_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancellation Policy"
            android:id="@+id/tourist_cancellation_policy"
            android:layout_alignTop="@+id/tourist_terms_cond"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp"
            android:textColor="@color/main_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:id="@+id/tourist_privacy_policy"
            android:textColor="@color/main_color"
            android:layout_below="@+id/tourist_terms_cond"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="223dp"
            android:layout_height="55dp"
            android:text="Back to Login Screen"
            android:id="@+id/tourist_back_to_screen_button"
            android:layout_below="@+id/tourist_privacy_policy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:textColor="#FFFFFF"
            android:background="@color/main_color" />
    </RelativeLayout>

</LinearLayout>