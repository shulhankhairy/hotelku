<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/home_owner_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

    </FrameLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="false">
        <RadioButton
            android:onClick="onClikButtonMenu"
            android:id="@+id/btnHome"
            style="@style/navbar_button"
            android:drawableTop="@mipmap/ic_home_passive"
            android:layout_marginTop="5dp" />
        <RadioButton
            android:onClick="onClikButtonMenu"
            android:id="@+id/btnHistory"
            style="@style/navbar_button"
            android:drawableTop="@mipmap/ic_history_passive"
            android:layout_marginTop="5dp" />
        <RadioButton
            android:onClick="onClikButtonMenu"
            android:id="@+id/btnNotif"
            style="@style/navbar_button"
            android:drawableTop="@mipmap/ic_notif_passive"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <RadioButton
            android:onClick="onClikButtonMenu"
            android:id="@+id/btnOrder"
            style="@style/navbar_button"
            android:drawableTop="@mipmap/ic_hg_passive"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <RadioButton
            android:onClick="onClikButtonMenu"
            android:id="@+id/btnSetting"
            style="@style/navbar_button"
            android:drawableTop="@mipmap/ic_more_passive"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
    </RadioGroup>
</RelativeLayout>